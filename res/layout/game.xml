                    android:textColor="#FFFFFF"
                    android:checked="true"
                    android:textOff="A"
                    android:textOn="A" />

                <ToggleButton
                    android:id="@+id/tgbB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_buttons"
                    android:text="B"
                    android:textColor="#FFFFFF"
                    android:checked="true"
                    android:textOff="B"
                    android:textOn="B" />

